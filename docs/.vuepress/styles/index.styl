section.footnotes {
  font-size: 0.85em;
}

p > img {
  display: block;
  margin: 0 auto;
}

p em {
  color: #277;
}

.home .hero img {
  max-height: 330px !important;
}

h1 {
  counter-reset: h2;
}

h2 {
  counter-reset: h3;
}

h3 {
  counter-reset: h4;
}

h4 {
  counter-reset: h5;
}

div:not(.feature)>h2:before {
  counter-increment: h2;
  content: counter(h2) ' ';
}

h3:before {
  counter-increment: h3;
  content: counter(h2) '.' counter(h3) ' ';
}

h4:before {
  counter-increment: h4;
  content: counter(h2) '.' counter(h3) '.' counter(h4) ' ';
}

h5:before {
  counter-increment: h5;
  content: '(' counter(h5) ') ';
}
